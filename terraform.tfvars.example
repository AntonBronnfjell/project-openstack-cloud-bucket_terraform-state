# ============================================================================
# Example variables for Terraform state bucket leaf
# ============================================================================
# Copy to terraform.tfvars and set values. Do not commit terraform.tfvars.

container_name         = "terraform-state"
container_archive_name = "terraform-state-archive"  # set to "" to skip
region                 = "RegionOne"                  # or leave "" to use OS_REGION_NAME
metadata = {
  purpose = "terraform-remote-state"
}

# Terraform-managed Swift deploy (runs on OpenStack host 192.168.2.3 via SSH)
# Set swift_deploy_enabled = false if Swift is already deployed.
swift_deploy_enabled   = true
swift_deploy_ssh_host  = "192.168.2.3"
swift_deploy_ssh_user  = "root"
# swift_deploy_ssh_private_key_path = "~/.ssh/id_rsa"  # optional; use SSH agent if unset
# swift_deploy_infra_repo = "https://github.com/AntonBronnfjell/tooling-openstack-infra-ansible_graphicsforge-infrastructure.git"
